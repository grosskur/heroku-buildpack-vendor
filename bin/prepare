#!/bin/bash

# fail fast
set -o errexit
set -o nounset
set -o pipefail

indent() {
  sed -u 's/^/       /'
}

scriptname=$(basename $0)
case $# in
  1) :;;
  *) echo "$scriptname: usage: $scriptname BUILD_DIR" >&2; exit 2;;
esac

build_dir="$1"

echo '---'
echo 'packages:'

# Basic build dependencies
if [ -f /etc/redhat-release ]
then
  cat <<EOT
  - autoconf
  - automake
  - bison
  - byacc
  - elfutils
  - flex
  - gcc
  - gcc-c++
  - gettext
  - libtool
  - make
  - patch
  - patchutils
  - pkgconfig
  - tar
  - unzip
  - wget
EOT
fi
